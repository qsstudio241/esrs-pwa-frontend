                    });
                    updatedCount++;
                  }
                });

                // Aggiornamento batch di tutti i topic
                if (topicsToUpdate.length > 0) {
                  console.log(
                    `üîÑ Eseguendo aggiornamento batch di ${topicsToUpdate.length} topic...`
                  );
                  topicsToUpdate.forEach(({ id, updates }) => {
