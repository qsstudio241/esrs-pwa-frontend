  const url = URL.createObjectURL(blob);
  const a = document.createElement("a");
  a.href = url;
  a.download = `${snapshot.meta.azienda || "Azienda"}_Report_Materialita_${
    new Date().toISOString().split("T")[0]
  }.html`;
